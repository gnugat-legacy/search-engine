{
    "name": "gnugat/search-engine",
    "license": "MIT",
    "type": "library",
    "description": "A POC library to handle interrogatory messages",
    "keywords": ["search engine", "cqrs", "interrogatory message", "query bus"],
    "homepage": "http://gnugat.github.io/search-engine",
    "authors": [
        {
            "name": "Lo√Øc Faugeron",
            "email": "faugeron-loic@gmail.com",
            "homepage": "http://gnugat.github.io",
            "role": "Developer"
        }
    ],
    "autoload": {
        "psr-4": { "Gnugat\\SearchEngine\\": "src/Gnugat/SearchEngine" }
    },
    "autoload-dev": {
        "psr-4": { "Gnugat\\SearchEngine\\Test\\": "tests" }
    },
    "require": {
        "doctrine/inflector": "^1.0",
        "php": "^5.3.2|^7.0"
    },
    "require-dev": {
        "ext-pdo": "*",
        "ext-pdo_pgsql": "*",
        "fabpot/php-cs-fixer": "^1.6",
        "incenteev/composer-parameter-handler": "^2.1",
        "memio/spec-gen": "^0.4",
        "phpunit/phpunit": "^4.6|^5.0",
        "symfony/yaml": "^2.2|^3.0"
    },
    "scripts": {
        "post-install-cmd": ["Incenteev\\ParameterHandler\\ScriptHandler::buildParameters" ],
        "post-update-cmd": [ "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters" ]
    },
    "extra": {
        "incenteev-parameters": [
            { "file": "tests/Fixtures/Project/config.yml" }
        ]
    }
}
